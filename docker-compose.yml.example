version: '2'
services:
  postgres:
    image: postgres:9
    environment:
      - "POSTGRES_HOST_AUTH_METHOD=trust"
    volumes:
      - postgres_data:/var/lib/postgresql/data
  redis:
    image: redis:4.0  
  app:
    build:
      context: .
      args:
        UID: 1000
        GID: 1000
        RAILS_ENV: development
    working_dir: /medusa
    environment:
      - "RAILS_ENV=development"
      - "REDIS_URL=redis://redis:6379"    
    command: bundle exec rails s -p 3000 -b '0.0.0.0'
    volumes:
      - ./app:/medusa/app
      - ./spec:/medusa/spec
      - ./config:/medusa/config
      - ./public:/medusa/public
      - ./db:/medusa/db
    ports:
      - "3000:3000"
    depends_on:
      - postgres
      - redis
  worker:
    build:
      context: . 
      args:
        UID: 1000
        GID: 1000
        RAILS_ENV: development
    working_dir: /medusa
    environment:
      - "RAILS_ENV=development"
      - "REDIS_URL=redis://redis:6379"      
    volumes:
      - ./app:/medusa/app
      - ./config:/medusa/config
      - ./public/system:/medusa/public/system
    command: bundle exec sidekiq
    links:
      - postgres
      - redis
volumes:
  postgres_data:
    external: true

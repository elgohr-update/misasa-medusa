version: '2'
services:
  postgres:
    image: postgres:9
    volumes:
      - ./data/postgres:/var/lib/postgresql/data
  app:
    #build: .
    image: misasa/medusa:latest
    working_dir: /usr/src/app
    command: bundle exec rails s -p 3000 -b '0.0.0.0'
    volumes:
      - .:/usr/src/app
      - stone_data:/mnt/database
    ports:
      - "3000:3000"
    depends_on:
      - postgres
volumes:
  stone_data:
    driver_opts:
      type: nfs
      o: "addr=172.24.1.36,nfsvers=4"
      device: ":/"
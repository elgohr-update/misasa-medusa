<div class="child">
  <% if f.object.errors.any? %>
    <div class="alert alert-danger">
      <ul class="list-unstyled">
        <% f.object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-1">
    </div>  
    <div class="col-sm-2">
      <%= f.text_field :name, value: @specimen.name + "-#{@specimen.children.size + 1}", placeholder: @specimen.name, class: "form-control input-sm" %>
    </div>
    <div class="col-sm-2">
      <%= f.select :physical_form_id, PhysicalForm.pluck(:name, :id), { include_blank: true }, class: "form-control input-sm" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :quantity_with_unit, placeholder: @specimen.quantity_with_unit, class: "form-control input-sm quantity" %>
      <%#= f.text_field :quantity, placeholder: "quantity", class: "form-control input-sm quantity" %>
      <%#= f.text_field :quantity_unit, class: "form-control input-sm quantity" %>
    </div>
    <div class="col-sm-2 form-inline">
      <span class="remove-quantity-child">
        <a class="btn btn-link btn-sm remove-child" disabled="disabled">less</a>
      </span>
      <a class="btn btn-link btn-sm add-child">more</a>
    </div>
  </div>
</div>

<tr>
  <td>
    <%= button_tag class: "btn btn-default btn-xs determine", "data-id" => specimen.global_id do %>
    <span class="fas fa-link"></span>
    <% end %>
  </td>
  <td><%= link_to specimen.name, specimen_path(specimen, format: :modal), "data-toggle" => "modal", "data-target" => "#show-modal", class: specimen_ghost(specimen)  %></td>
  <td><%= specimen.parent.try!(:name) %></td>
  <td><%= specimen.physical_form.try!(:name) %></td>
  <td><%= specimen.classification.try!(:full_name) %></td>
  <td><%= specimen.group.try!(:name) %></td>
  <td><%= difference_from_now(specimen.updated_at) %></td>
</tr>

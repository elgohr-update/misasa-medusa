<div class="row">
  <div id="show-caption" class="col-lg-12">
    <%= @surface_image.name_with_id %>
  </div>
</div>
<div class="row">
  <div id="show-body" class="col-lg-12">
    <!-- Tab panes -->
    <% tab_info = [
        ["dashboard",nil,"show map"],
        ["svg",nil, "show image"],
#       ["tile",nil, "show tiles"],
        ["zoom",0.upto(6).to_a,"show tile for each zoom levels","zooms"],
    ] %>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <% tab_info.each do |key,array,message| %>
       <li class="<%= active_if_current(key) %>" ><a href="#<%= key %>" data-toggle="tab" title="<%= message %>"><%= key + data_count(array) %></a></li>
      <% end %>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
      <% tab_info.each do |key,array,message,partial| %>
       <div class="tab-pane<%= active_if_current(key)%>" id="<%= key %>"><%= render partial: (partial ? partial : key.underscore ) %></div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  $("div.surface-viewer").surfaceViewer();
<% end %>

<% content_for :modal_title do %>
    <%= show_title(@surface) %>
<% end %>

<div class="row">
    <div class="col-lg-12">
        <%= render partial: "parts/property", locals: { record: @surface }, :formats => :html %>
    </div>
</div>

<%= javascript_tag do %>
  $(document).on("succeed.ajaxForm", "#edit_surface_<%= @surface.id %>", function() {
    location.href="<% surface_path(@surface) %>";
  });
<% end %>

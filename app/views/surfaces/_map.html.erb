<%= @surface.map(class: "large-map", add_spot: true, specimens: @specimens) %>
<% if @surface.globe? %>
  <%#= ActsAsMappable::Mappable::HtmlGenerator.generate(lat: lat, lng: lng, zoom: zoom, width: '100%', height: 900) %>
  <%= javascript_tag "actsAsMappable.initToMap();" %>
<% else %>
  <%= javascript_tag do %>
    $("div.surface-viewer").surfaceViewer();
  <% end %>
  <script>
   initSurfaceMap();
  </script>
<% end %>

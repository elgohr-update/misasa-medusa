<% if @surface.globe? %>
  <%= ActsAsMappable::Mappable::HtmlGenerator.generate(lat: 0, lng: 0, zoom: 0, width: 300, height: 300) %>
  <%= javascript_tag "actsAsMappable.initToMap();" %>
<% else %>
  <%= @surface.map(class: "large-map", add_spot: true) %>
  <%= javascript_tag do %>
    $("div.surface-viewer").surfaceViewer();
  <% end %>
  <script>
   initSurfaceMap();
  </script>
<% end %>

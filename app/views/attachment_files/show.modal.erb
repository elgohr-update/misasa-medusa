<% content_for :modal_title do %>
 <%= @attachment_file.decorate.title %>
<% end %>
<div class="row">
  <div class="col-lg-12">
    <%= image_tag @attachment_file.path(:large) %>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <dl class="dl-horizontal">
      <dt>name</dt>
      <dd><%= @attachment_file.name %></dd>
      <dt>type</dt>
      <dd><%= @attachment_file.data_content_type %></dd>
      <dt>size</dt>
      <dd><%= @attachment_file.data_file_size %></dd>
      <dt>owner</dt>
      <dd><%= @attachment_file.user.try!(:username) %></dd>
      <dt>group</dt>
      <dd><%= @attachment_file.group.try!(:name) %></dd>
      <dt>published at</dt>
      <dd><%= difference_from_now(@attachment_file.published_at) %></dd>
      <dt>updated at</dt>
      <dd><%= difference_from_now(@attachment_file.updated_at) %></dd>
      <dt>created at</dt>
      <dd><%= difference_from_now(@attachment_file.created_at) %></dd>
    </dl>
  </div>
</div>

<div class="modal-header alert">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title" id="notification-modal-label">
    Affine Matrix of <%= @attachment_file.name %>
  </h4>
</div>
<%= form_tag(update_affine_matrix_attachment_file_path(@attachment_file), remote: true, method: 'put', format: 'js') do %>

  <div class="modal-body">
    <div class="alert error-message"></div>
    <div class="row">
      <div class="col-lg-2">
	<%= image_tag @attachment_file.path(:thumb) %>
      </div>
      <div class="col-lg-10">
        <div class="row">
	  <%= text_field_tag( 'affine_matrix[]', @attachment_file.affine_matrix[0]) %>
	  <%= text_field_tag( 'affine_matrix[]', @attachment_file.affine_matrix[1]) %>
	  <%= text_field_tag( 'affine_matrix[]', @attachment_file.affine_matrix[2]) %>
        </div>
        <div class="row">
	  <%= text_field_tag( 'affine_matrix[]', @attachment_file.affine_matrix[3]) %>
	  <%= text_field_tag( 'affine_matrix[]', @attachment_file.affine_matrix[4]) %>
	  <%= text_field_tag( 'affine_matrix[]', @attachment_file.affine_matrix[5]) %>
        </div>
        <div class="row">
	  <%= text_field_tag( 'affine_matrix[]', @attachment_file.affine_matrix[6]) %>
	  <%= text_field_tag( 'affine_matrix[]', @attachment_file.affine_matrix[7]) %>
	  <%= text_field_tag( 'affine_matrix[]', @attachment_file.affine_matrix[8]) %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= button_tag type: "submit", class: "btn btn-default" do %>
      <span class="glyphicon glyphicon-save"></span>
    <% end %>
  </div>
<% end %>


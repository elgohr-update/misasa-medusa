<div class="modal-header alert">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title" id="notification-modal-label">
    Corners of <%= @attachment_file.name %>
  </h4>
</div>
<%= form_with url:update_corners_attachment_file_path(@attachment_file), local: false, method: 'put', format: 'js' do %>

  <div class="modal-body">
    <div class="alert error-message"></div>
    <div class="row">
      <div class="col-lg-2">
	<%= image_tag @attachment_file.path(:thumb) %>
      </div>
      <div class="col-lg-10">
        <div class="row">
          <div class="col-lg-2">
            <%= label_tag :'left upper' %>
          </div>
          <div class="col-lg-10">
	    <%= text_field_tag( 'corners_on_world[lu][]', (@attachment_file.corners_on_world[0][0] if @attachment_file.corners_on_world)) %>
	    <%= text_field_tag( 'corners_on_world[lu][]', (@attachment_file.corners_on_world[0][1] if @attachment_file.corners_on_world)) %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-2">
            <%= label_tag :'right upper' %>
          </div>
          <div class="col-lg-10">
	    <%= text_field_tag( 'corners_on_world[ru][]', (@attachment_file.corners_on_world[1][0] if @attachment_file.corners_on_world)) %>
	    <%= text_field_tag( 'corners_on_world[ru][]', (@attachment_file.corners_on_world[1][1] if @attachment_file.corners_on_world)) %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-2">
            <%= label_tag :'right bottom' %>
          </div>
          <div class="col-lg-10">
	    <%= text_field_tag( 'corners_on_world[rb][]', (@attachment_file.corners_on_world[2][0] if @attachment_file.corners_on_world)) %>
	    <%= text_field_tag( 'corners_on_world[rb][]', (@attachment_file.corners_on_world[2][1] if @attachment_file.corners_on_world)) %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-2">
            <%= label_tag :'left bottom' %>
          </div>
          <div class="col-lg-10">
	    <%= text_field_tag( 'corners_on_world[lb][]', (@attachment_file.corners_on_world[3][0] if @attachment_file.corners_on_world)) %>
	    <%= text_field_tag( 'corners_on_world[lb][]', (@attachment_file.corners_on_world[3][1] if @attachment_file.corners_on_world)) %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= button_tag type: "submit", class: "btn btn-default" do %>
      <span class="glyphicon glyphicon-save"></span>
    <% end %>
  </div>
<% end %>


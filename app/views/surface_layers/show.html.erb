<div class="row">
  <div id="show-caption" class="col-lg-12">
    <%= @surface_layer.name_with_id %>
  </div>
</div>

<div class="row">
  <div id="show-tools" class="col-lg-6">
    <div class="row btn-toolbar tool-selector" role="toolbar">
      <div class="btn-group btn-group-sm">
        <%= link_to map_surface_layer_path(@surface,@surface_layer), class: "btn btn-default activate", id: "tree-conifer-button", remote: true, title: "top" do %>
          <span class="fas fa-globe-asia"></span>
        <% end %>
      </div>
      <% if can? :update, @surface %>
      <div class="btn-group btn-group-sm">
	<%= link_to edit_surface_layer_path(@surface, @surface_layer), class: "btn btn-default", remote: true do %>
	  <span class="fas fa-pencil-alt"></span>
	<% end %>
      </div>
      <% end %>
    </div>
    <img>
    <div class="row tool-content">
    </div>
  </div>

  <div id="show-body" class="col-lg-6">
    <% tab_info = [
        ["dashboard",nil,"show map"],
        #["image",@surface_layer.images,"show image"],
    ] %>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <% tab_info.each do |key,array,message| %>
       <li class="<%= active_if_current(key) %>" ><a href="#<%= key %>" data-toggle="tab" title="<%= message %>"><%= key + data_count(array) %></a></li>
      <% end %>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
      <% tab_info.each do |key,array| %>
        <div class="tab-pane<%= active_if_current(key) %>" id="<%= key %>"><%= render partial: key.underscore %></div>
      <% end %>
    </div>
  </div>
</div>

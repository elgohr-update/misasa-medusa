    <%= form_with model:@spot do |f| %>
    <%= error_notification(@spot.errors) %>

    <div class="form-group form-group-sm">
      <%= f.label :name, class: "small" %>
      <%= f.text_field :name, class: "form-control input-sm" %>
    </div>
    <div class="row">
    <div class="col-lg-12">
      <%= f.label :coordinate, class: "small" %>
    <div class="input-group">
      <span class="input-group-addon">x</span>
      <%= f.text_field :spot_x, class: "form-control" %>
      <span class="input-group-addon">y</span>
      <%= f.text_field :spot_y, class: "form-control" %>
    </div>
    </div>
    </div>


    <div class="form-group form-group-sm">
      <%= f.label "link ID", class: "small" %>
      <div class="input-group">
    <%= f.text_field :target_uid, id: "spot_target_uid", class: "form-control input-sm" %>
	<span class="input-group-addon">
	  <%= link_to records_path(per_page: 10, format: :modal), "data-toggle" => "modal", "data-target" => "#search-modal", "data-input" => "#spot_target_uid" do %>
	  <span class="fas fa-search"></span>
	  <% end %>
	</span>
      </div>
    </div>

    <div class="form-group form-group-sm">
      <%= f.label :radius_in_percent, class: "small" %>
      <%= f.text_field :radius_in_percent, class: "form-control input-sm" %>
    </div>

    <div class="form-group form-group-sm">
      <%= f.label :stroke_width, class: "small" %>
      <%= f.text_field :stroke_width, class: "form-control input-sm" %>
    </div>

    <div class="form-group form-group-sm">
      <%= f.label :stroke_color, class: "small" %>
      <%= f.text_field :stroke_color, class: "form-control input-sm" %>
    </div>

    <div class="form-group form-group-sm">
      <%= f.label :fill_color, class: "small" %>
      <%= f.text_field :fill_color, class: "form-control input-sm" %>
    </div>

    <div class="form-group form-group-sm">
      <%= f.label :opacity, class: "small" %>
      <%= f.text_field :opacity, class: "form-control input-sm" %>
    </div>

    <%= f.submit "OK", class: "btn btn-sm" %>
    <%= link_to "cancel", request.referer, class: "btn btn-sm" %>
    <% end %>
